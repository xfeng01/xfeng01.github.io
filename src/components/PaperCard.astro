---
const { title, date, authors, url } = Astro.props;
---

<a href={url} class="block bg-white rounded-lg px-3">
  <h2 class="text-lg font-semibold text-gray-800 hover:text-blue-600 mb-2">
    {title}
  </h2>
  <div class="flex items-center justify-between">
    <p class="text-sm text-gray-600 mb-0 mr-4 line-clamp-2">{authors.join(', ')}</p>
    <div class="flex items-center text-xs text-gray-500">
      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path
          d="M10 2a8 8 0 100 16 8 8 0 000-16zm0 14a6 6 0 110-12 6 6 0 010 12zm1-6a1 1 0 11-2 0V7a1 1 0 012 0v3z"
        ></path>
      </svg>
      {date}
    </div>
  </div>
</a>

<hr class="border-t border-gray-200 my-4" />
