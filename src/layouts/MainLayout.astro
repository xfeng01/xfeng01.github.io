---
import BasicLayout from "./BasicLayout.astro";

interface Props {
  hideSidebar?: boolean;
}

const { hideSidebar = true } = Astro.props;
---
<BasicLayout>
  <main
    class={`max-w-full min-h-screen ${hideSidebar ? "md:grid-cols-1" : "md:grid md:grid-rows-1"} mx-auto gap-4 md:gap-8 relative px-0 md:px-4 my-8 md:my-0`}
  >
    <div
      class={`px-0 md:px-[100px] ${hideSidebar ? "md:ml-0" : "md:ml-36"} max-md:mt-2`}
    >
      <slot />
    </div>
  </main>
</BasicLayout>
